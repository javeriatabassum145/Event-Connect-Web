@model Event_Connect_Web.Models.Event

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit Event</h2>
    </div>

    <form method="post" asp-action="Edit">
        <input asp-for="EventID" hidden />
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Title">Event Title</label>
                <input type="text" class="form-control mb-3" asp-for="Title">
                <span asp-validation-for="Title" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Description">Event Description</label>
                <input type="text" class="form-control mb-3" asp-for="Description">
                <span asp-validation-for="Description" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Location">Event Location</label>
                <input type="text" class="form-control mb-3" asp-for="Location">
                <span asp-validation-for="Location" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Organizer.Name">Event Organizer Name</label>
                <input type="text" class="form-control mb-3" asp-for="Organizer.Name">
                <span asp-validation-for="Organizer.Name" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Organizer.Email">Event Organizer Email</label>
                <input type="text" class="form-control mb-3" asp-for="Organizer.Email">
                <span asp-validation-for="Organizer.Email" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Organizer.PhoneNumber">Event Organizer PhoneNumber</label>
                <input type="text" class="form-control mb-3" asp-for="Organizer.PhoneNumber">
                <span asp-validation-for="Organizer.PhoneNumber" class="alert-danger"></span>
            </div>
        </div>

        <!-- Add similar blocks for other properties like Designation, Description, Location, Date -->

        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-pencil-square"></i>Edit</button>
        <a asp-controller="Event" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
