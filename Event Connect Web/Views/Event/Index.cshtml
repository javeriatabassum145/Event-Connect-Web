@model IEnumerable<Event_Connect_Web.Models.Event>

<div class="container shadow p-5">
    <h1 class="text-center mb-3">Event List</h1>

    <div class="col mb-3">
        <a asp-controller="Event" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Create Event</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Event Title</th>
                <th scope="col">Organizer</th>
                <th scope="col">Location</th>
                <th scope="col">Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.Title
                    </td>
                    <td width="20%">
                        @item.Organizer?.Name
                    </td>
                    <td width="25%">
                        @item.Location
                    </td>
                    <td width="20%">
                        @item.Date
                    </td>
                    <td>
                        <div role="group" class="w-60 btn-group">
                            <a asp-controller="Event" asp-action="Edit" asp-route-id="@item.EventID" class="btn btn-sm btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>&nbsp;
                            <a asp-controller="Event" asp-action="Delete" asp-route-id="@item.EventID" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
